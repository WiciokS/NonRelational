@page
@model ScoreBoardModel
@{
    <table>
        <thead>
            <tr>
                <th>
                    <a href="?sortBy=Username&sortDescending=@(!Model.SortDescending)">Username</a>
                </th>
                <th>
                    <a href="?sortBy=Theme&sortDescending=@(!Model.SortDescending)">Theme</a>
                </th>
                <th>
                    <a href="?sortBy=AverageScore&sortDescending=@(!Model.SortDescending)">Average Score</a>
                </th>
                <th>
                    <a href="?sortBy=TotalGamesPlayed&sortDescending=@(!Model.SortDescending)">Total Games Played</a>
                </th>
                <th>
                    <a href="?sortBy=TotalScore&sortDescending=@(!Model.SortDescending)">Total Score</a>
                </th>
                <th>
                    <a href="?sortBy=LastPlayed&sortDescending=@(!Model.SortDescending)">Last Played</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model.ScoreBoardEntries)
            {
                <tr>
                    <td>@entry.Username</td>
                    <td>@entry.Theme</td>
                    <td>@Model.CalculateAverageScore(entry)</td>
                    <td>@Model.GetTotalGamesPlayed(entry)</td>
                    <td>@Model.CalculateTotalScore(entry)</td>
                    <td>@entry.LastPlayed.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}

<style>
    /* Overall table styles */
    table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Subtle shadow for depth */
        background-color: white; /* White background for a clean look */
        margin-top: 20px; /* Space from the top */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Modern font */
        overflow: hidden; /* Ensures the box shadow is visible */
    }

    /* Header styles */
    thead {
        background-color: #343a40; /* A darker shade for strong contrast */
        color: black; /* White text for contrast */
        text-transform: uppercase; /* Capital letters for the header for added visibility */
        font-size: 1.1em; /* Slightly larger font size */
    }

    th {
        text-align: left;
        padding: 12px 15px; /* More padding for a spacious layout */
        font-weight: bold; /* Bold font weight for header */
        letter-spacing: 1px; /* Space out the letters to improve readability */
        border-bottom: 2px solid #dee2e6; /* Solid line to distinguish header from body */
    }

        /* Hover effect for the header */
        th:hover {
            background-color: #495057; /* A shade lighter than header background */
            cursor: pointer; /* Indicates that the header is clickable */
            transition: all 0.3s ease-in-out; /* Smooth transition for hover effect */
        }

            th:hover a {
                color: white; /* White text on hover for the link */
            }

        /* Header links */
        th a {
            color: black; /* White text links in the header */
            text-decoration: none; /* No underlines on links */
            display: block; /* Make the links fill the cell for a larger click area */
            transition: all 0.3s ease-in-out; /* Smooth transition for hover effect */
        }

    /* Zebra-striping for rows and hover effect */
    tr:nth-child(odd) {
        background-color: #f8f9fa; /* Light grey zebra striping */
    }

    tr:hover {
        background-color: #e9ecef; /* Very light grey for row hover */
    }

</style>
