@page
@model QuizModel

@{
    ViewData["Title"] = "Quiz - " + Model.SelectedTheme?.Theme;
}

<h2>@Model.SelectedTheme?.Theme</h2>

<!-- Display the CurrentQuestionIndex for debugging -->
<p>Current Question Index: @Model.CurrentQuestionIndex / @Model.SelectedTheme.Questions.Length</p>

@if (Model.SelectedTheme.Questions[Model.CurrentQuestionIndex] != null)
{
    <div id="question">
        <p>@Model.CurrentQuestion.Question</p>
    </div>
    <div id="answers">
        @foreach (var answer in Model.CurrentQuestion.Answers)
        {
            <button type="button" class="answer-btn" onclick="selectAnswer(this, '@answer.Answer')">@answer.Answer</button>
        }
    </div>
    <div id="next-question">
        <button type="button" class="next-btn" onclick="nextQuestion(this)">Next</button>
    </div>
}

@section Scripts {
    <script>
        function selectAnswer(button, answer) {
            // Clear any previous selection
            document.querySelectorAll('.answer-btn').forEach(btn => btn.disabled = true);

            // Mark the button as selected
            document.getElementById('SelectedAnswer').value = answer;
            button.classList.add('selected');

            // Check if the answer is correct and apply the appropriate class
            let isCorrect = '@Model.SelectedTheme.Questions[Model.CurrentQuestionIndex].Answers.FirstOrDefault(a => a.IsCorrect)?.Answer' === answer;
            button.classList.add(isCorrect ? 'correct' : 'incorrect');

            // Enable the Next button
            document.querySelector('#next-question button').disabled = false;

            if (isCorrect) {
                // Increment score (handled on the server-side in the OnPost method)
            } else {
                // Show the correct answer
                let correctBtn = [...document.querySelectorAll('.answer-btn')]
                    .find(btn => btn.textContent === '@Model.SelectedTheme.Questions[Model.CurrentQuestionIndex].Answers.FirstOrDefault(a => a.IsCorrect)?.Answer');
                correctBtn.classList.add('correct');
            }
        }
        function nextQuestion(button) {
            // Increment the current question index
            document.getElementById('SelectedAnswer').value = '';
            document.querySelector('#next-question button').disabled = true;
            document.querySelectorAll('.answer-btn').forEach(btn => {
                btn.classList.remove('selected', 'correct', 'incorrect');
                btn.disabled = false;
            });
            Model.CurrentQuestionIndex += 1;
        }

        // Disable the Next button until an answer is selected
        document.querySelector('#next-question button').disabled = true;
    </script>
    <style>
        .correct {
            background-color: green;
        }

        .incorrect {
            background-color: red;
        }

        .selected {
            font-weight: bold;
        }
    </style>
}
