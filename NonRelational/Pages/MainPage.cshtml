@page "/"
@model MainPageModel

@{
    ViewData["Title"] = "Quiz Topics";
}

<h2>Quiz Topics</h2>

<ul>
    @foreach (var topic in Model.Topics)
    {
        <li>
            <a asp-page="/Quiz" asp-route-theme="@topic.Theme">@topic.Theme</a>
        </li>
    }
</ul>
<style>

    h2 {
        text-align: center;
    }

    ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    li {
        margin: 10px 0; /* Add some space around each item */
        display: flex; /* Enables flexbox layout */
        flex-direction: column; /* Stack items vertically */
        align-items: center; /* Center items along the cross axis (horizontally) */
    }

    a {
        text-decoration: none; /* Remove underline */
        color: #000000; /* Link color */
        background-color: #f8f9fa; /* Light background color */
        padding: 10px 15px; /* Add some padding */
        border-radius: 5px; /* Rounded corners */
        display: inline-block; /* To apply padding and background */
        transition: all 0.3s ease; /* Smooth transition for hover effects */
    }

        a:hover {
            color: #0056b3; /* Darker shade when hovered */
            background-color: #e2e6ea; /* Slightly darker background on hover */
            text-decoration: none;
        }
</style>


